@model IEnumerable<DayServiceApp.Models.User>

@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>利用者ページ</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;500&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <header class="py-3 border-bottom text-center">
        <h2 class="fw-bold">利用者ページ</h2>
    </header>
    <div class="text-center py-4">
        <div class="container">
            <!-- 常に2列表示 -->
            <div class="row row-cols-2 g-3">
                @foreach (var user in Model)
                {
                    <div class="col d-flex justify-content-center">
                        <!-- user.user_id をパラメータにして IndividualSupportService へ飛ぶ -->
                        <a href="@Url.Action(
                            action: "IndividualSupportPlans",
                            controller: "Home",
                            values: new { user_id = user.user_id }
                        )"
                           class="shadow-sm rounded-link-list"
                           aria-label="@user.name">
                            @user.name
                        </a>
                    </div>
                }
            </div>
        </div>
        <footer class="py-3 border-top text-center">
            <a href="/" class="back-link">ホーム画面に戻る</a>
        </footer>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
