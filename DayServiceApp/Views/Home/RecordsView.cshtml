@model IEnumerable<DayServiceApp.Models.Record>

@{
    ViewData["Title"] = "Records Page";
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>記録一覧</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;500&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <header class="py-3 border-bottom text-center">
        <h2 class="fw-bold">記録一覧</h2>
    </header>
    <div class="container py-4">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>記録ID</th>
                        <th>利用者名</th>
                        <th>記録者の名前</th>
                        <th>気づき</th>
                        <th>出来事・詳細</th>
                        <th>支援内容</th>
                        <th>その後の行動</th>
                        <th>登録日時</th>
                        <th>更新日時</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        <tr>
                            <td>@record.record_id</td>
                            <!-- 利用者名: User.name を表示 -->
                            <td>@record.User?.name</td>
                            <td>@record.recorder_name</td>
                            <td>@record.notices</td>
                            <td>@record.details</td>
                            <td>@record.support_details</td>
                            <td>@record.post_changes</td>
                            <td>@record.created_at</td>
                            <td>@record.updated_at</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <footer class="py-3 border-top text-center">
            <a href="/" class="back-link">ホーム画面に戻る</a>
        </footer>

    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
