@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>らくらくHUG</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;500&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fef9db; /* 背景色 */
            font-family: 'Noto Sans JP', sans-serif; /* 柔らかく読みやすいフォント */
            font-weight: 300; /* さらに軽い印象を与えるフォントウェイト */
        }

        header {
            background-color: #eca89b; /* ヘッダー部分の背景色 */
        }

        .rounded-button {
            border-radius: 30px; /* ボタンを丸みを帯びた形状に */
            background-color: #8b5e3c; /* 柔らかい焦げ茶色 */
            color: white;
            width: 220px; /* ボタンの幅を統一 */
            height: 60px; /* ボタンの高さを統一 */
            font-size: 1.2rem; /* ボタンの文字サイズを調整 */
            font-weight: 500; /* ボタンの文字に少し強調 */
        }

            .rounded-button:hover {
                background-color: #a0735b; /* ホバー時に少し明るい焦げ茶色に */
            }
    </style>
</head>
<body>
    <header class="py-3 border-bottom">
        <h2 class="text-center fw-bold text-white">らくらくHUG</h2>
    </header>
    <div class="text-center py-5">
        <div class="container">
            <div class="d-flex flex-column align-items-center gap-4 mt-4">
                <a class="btn shadow-sm rounded-button" asp-area="" asp-controller="Home" asp-action="IndividualRecords">個別記録</a>
                <button class="btn shadow-sm rounded-button">個別支援計画作成</button>
                <button class="btn shadow-sm rounded-button">日報作成</button>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>